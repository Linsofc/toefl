{
    "version": 2,
    "cleanUrls": true,
    "trailingSlash": false,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/admin",
            "dest": "/public/admin_login.html"
        },
        {
            "src": "/admin_login.html",
            "dest": "/public/admin_login.html"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}
